; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

[*.rb]
indent_style = tab
indent_size = 2

[Vagrantfile]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
